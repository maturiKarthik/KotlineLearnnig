<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <EditText
            android:layout_width="261dp"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:hint="Enter Name :"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_alignParentStart="true"
            android:layout_marginStart="66dp" android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" android:layout_marginTop="32dp" android:layout_marginLeft="66dp"/>

    <EditText android:layout_width="258dp" android:layout_height="wrap_content"
              android:id="@+id/email"
              android:hint="Enter emailId :"
              android:layout_alignParentTop="true"
              android:layout_marginTop="96dp" android:layout_alignStart="@+id/name"/>
    <Button
            android:text="Sign In"
            android:layout_width="100dp"
            android:layout_height="50dp" android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" android:id="@+id/sign" android:layout_marginBottom="231dp"
            android:layout_marginTop="89dp" android:layout_below="@+id/email"/>
    <Button
            android:text="Github RetroFit"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" android:id="@+id/retrofit" android:layout_marginBottom="32dp"/>


</RelativeLayout>